<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".AudioRecActivity">

    <Button
        android:id="@+id/buttonStartRec"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="45dp"
        android:layout_marginRight="180dp"
        android:background="@layout/rounded_button"
        android:onClick="startrecord"
        android:text="Start Recording"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/buttonStopRec"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_below="@+id/buttonStartRec"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="180dp"
        android:background="@layout/rounded_button"
        android:onClick="stopRecord"
        android:text="Stop Recording"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/buttonStartPlay"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_below="@+id/buttonStopRec"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="180dp"
        android:background="@layout/rounded_button"
        android:onClick="playRecord"
        android:text="Play Recording"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/buttonStopPlay"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_below="@+id/buttonStartPlay"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="180dp"
        android:background="@layout/rounded_button"
        android:onClick="stopPlay"
        android:text="Stop Recording"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="254dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="78dp"
        android:layout_marginLeft="78dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="79dp"
        android:layout_marginRight="79dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Wanna Sing/Record?"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Start Your Recording !!"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold|italic" />


</RelativeLayout>