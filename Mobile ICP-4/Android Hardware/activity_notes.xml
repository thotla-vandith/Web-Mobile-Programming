<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".NotesActivity">

    <EditText
        android:id="@+id/textInfoXML"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        android:hint="Type Your Notes"
        android:textColor="#FFFFFF"
        android:textColorHint="#A8A8A8"
        android:textStyle="bold|italic"/>

    <Button
        android:id="@+id/btnSaveData"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_below="@+id/textInfoXML"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="105dp"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="57dp"
        android:layout_marginRight="30dp"
        android:background="@layout/rounded_button"
        android:onClick="saveInfo"
        android:text="Save Your Data"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/btnLoadData"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_below="@+id/btnSaveData"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="106dp"
        android:layout_marginLeft="106dp"
        android:layout_marginTop="26dp"
        android:layout_marginRight="30dp"
        android:background="@layout/rounded_button"
        android:onClick="loadInfo"
        android:text="Load Your Data"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/labelInfoXML"
        android:layout_width="329dp"
        android:layout_height="78dp"
        android:layout_below="@+id/btnLoadData"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="63dp"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />
</RelativeLayout>